@model ChangeProfilePicture

@{
    ViewData["Title"] = "Change Profile Picture";
    ViewData.AddActivePage(ManageNavPages.ChangeProfilePicture);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <img class="img-thumbnail img-responsive img-height" src="data:image;base64,@System.Convert.ToBase64String(Model.ProfilePictureContent)" height="100" width="100" />
                <input asp-for="ProfilePictureFile" class="form-control" />
                <span asp-validation-for="ProfilePictureFile" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
